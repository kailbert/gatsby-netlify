$black = #000
$white = #fff

a
    color $black
    text-decoration none
ul
    li
        list-style-type none


// BASIC FLEXBOX GRID 
.container
	margin 0 auto
	max-width 1260px
.row
	display flex
	flex 0 1 auto
	flex-direction row
	flex-wrap wrap
.col
	flex 0 0 auto
	padding-right 1rem
	padding-left 1rem
	flex-grow 1
	flex-basis 0
	max-width 100%

// BASIC ICON SETUP
.icon
	display inline-block
	width 24px
	height 24px
	