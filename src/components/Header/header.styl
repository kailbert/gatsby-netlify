random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.hero
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center
    border 1px solid red
    overflow hidden
    transition all 2s ease
    .logo
        letter-spacing -.03rem
        font-size 12vw
        span
            display inline-block
            transition transform 2s ease
            for i in (1..15)
                &:nth-child({i})
                    transform translateY(2vh * random(0, 22))
.hero.is-hidden
    margin-top -50vh
