random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

.hero
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center
    transition all 2s ease
    border 1px solid red
    margin-top -100vh
    overflow hidden
    .logo
        text-transform uppercase
        letter-spacing -.03rem
        transition all 2s ease
        font-size 12vw
        span
            display inline-block
            transition transform 2s ease
            for i in (1..15)
                &:nth-child({i})
                    transform translateY(2vh * random(0, 22))
.hero.is-home
    margin-top 0vh
    .logo
        text-transform uppercase
        letter-spacing -.03rem
        span
            for i in (1..15)
                &:nth-child({i})
                    transform translateY(0)
