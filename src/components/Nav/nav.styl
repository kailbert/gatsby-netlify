nav 
    z-index 100
    position fixed
    bottom 2rem
    left 2rem
    animation fadeInLeft 1000ms ease forwards 2.8s
    opacity 0
    ul
        li
            list-style-type none
            &:nth-child(1)
                // text-transform uppercase
            &:nth-child(2)
                margin-left 3vw * 1
            &:nth-child(3)
                 margin-left 3vw * 2
            &:nth-child(4)
                 margin-left 3vw * 3

@keyframes fadeInLeft
    0%
        opacity 0
        transform translate(-200px,0)
    100%
        opacity 1
        transform translate(0,0)